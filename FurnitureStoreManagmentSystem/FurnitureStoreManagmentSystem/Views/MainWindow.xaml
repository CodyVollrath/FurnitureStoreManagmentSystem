<Window x:Class="FurnitureStoreManagmentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnitureStoreManagmentSystem"
        mc:Ignorable="d"
        Title="Furniture Managment System" Height="450" Width="800">
    <Grid>
        <Border Background="#222222" CornerRadius="20" Margin="10,20,10,10">
            <StackPanel>
                <Label Content="Furniture Managment System" Foreground="White" FontSize="25" HorizontalAlignment='Center'/>
                <Button Margin="10 20" Width="250" Content="Register Customer" Background="White" FontSize="20"  Click="RegisterCustomer_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
