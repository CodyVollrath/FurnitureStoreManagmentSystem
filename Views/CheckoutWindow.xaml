<Window x:Class="FurnitureStoreManagmentSystem.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CheckoutWindow" Height="450" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="419" Margin="0,0,-8,0" VerticalAlignment="Top" Width="400">
            <Button Content="Back" Click="Back_Click" Margin="10,10,0,10" Width="75" Height="25"
                    HorizontalAlignment="Left" />
            <TextBlock x:Name="customerText" Text="Customer: Full Name and ID" HorizontalAlignment="Center"
                       Margin="0,0,0,5" />
            <TextBlock x:Name="transactionText" Text="Transaction: ID" HorizontalAlignment="Center" Margin="0,0,0,5" />
            <TextBlock x:Name="priceText" Text="Price: #" HorizontalAlignment="Center" Margin="0,0,0,5" />
            <Button Content="Complete Checkout" HorizontalAlignment="Center" VerticalAlignment="Top" Width="133"
                    Height="32" Margin="0,0,0,20" />
        </StackPanel>
    </Grid>
</Window>